<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBaseStyle" parent="BaseStyle">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Secondary" parent="ButtonBaseStyle" />

    <style name="Button.Secondary.NoStroke" parent="ButtonBaseStyle">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Primary" parent="ButtonBaseStyle" />

    <style name="ButtonBase" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ButtonStandard" parent="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStandard.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <dimen name="default_button_height">60dp</dimen>
    <dimen name="rounded_button_radius">30dp</dimen>
    <dimen name="standard_button_height">60dp</dimen>
    <dimen name="min_button_width">232dp</dimen>
    <dimen name="button_stroke_width">2dp</dimen>
</resources>